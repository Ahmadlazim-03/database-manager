# Backend Configuration
# Must match the PORT setting in backend/.env
VITE_BACKEND_PORT=8080
VITE_API_BASE_URL=http://localhost:8080/api

# Frontend Configuration
# Vite will automatically detect and use the next available port if 3000 is busy
VITE_FRONTEND_PORT=3000

# Optional: Application settings
VITE_APP_NAME=Database Manager
VITE_APP_VERSION=1.0.0

# Optional: Development settings
VITE_DEBUG=false
VITE_LOG_LEVEL=info

# Production settings (uncomment for production builds)
# VITE_API_BASE_URL=https://yourdomain.com/api
# VITE_FRONTEND_URL=https://yourdomain.com
